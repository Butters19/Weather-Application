<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:text="@string/version"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:visibility="visible" />

    <EditText
        android:id="@+id/city_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/aquamarine_blue"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250sp"
        android:layout_marginHorizontal="70sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/hint_city" />

    <Button
        android:id="@+id/weather_button"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/aquamarine_blue"
        android:layout_below="@+id/city_name"
        android:layout_marginTop="20sp"
        android:layout_marginHorizontal="120sp"
        android:text="@string/weather_button" />
    <TextView
        android:id="@+id/result_info"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@id/weather_button"
        android:layout_marginTop="30sp"
        android:layout_marginHorizontal="100sp"
        android:fontFamily="@font/montserrat_alternates_bold"
        android:textColor="@color/light_grey"
        />

</RelativeLayout>